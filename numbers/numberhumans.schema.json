{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "$ref": "#/definitions/numberhuman"
  },
  "definitions": {
    "numberhumanAbility": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" }
      }
    },
    "numberhuman": {
      "type": "object",
      "properties": {
        "uuid": { "type": "string", "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$" },
        "name": { "type": "string" },
        "rarity": {
          "type": "string",
          "enum": ["common", "rare", "epic"]
        },
        "hashedName": { "type": "string", "pattern": "^[0-9a-f]{128}$" },
        "image": { "type": "string" },
        "baseHP": { "type": "integer" },
        "baseATK": { "type": "integer" },
        "ability": {
          "$ref": "#/definitions/numberhumanAbility"
        }
      }
    }
  }
}
