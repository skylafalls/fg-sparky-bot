{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "numberhumanAbility": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" }
      }
    },
    "numberhuman": {
      "type": "object",
      "properties": {
        "uuid": { "type": "string", "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$" },
        "name": { "type": "string" },
        "rarity": {
          "type": "string",
          "enum": ["common", "rare", "epic"]
        },
        "hashedName": { "type": "string", "pattern": "^[0-9a-f]{128}$" },
        "image": { "type": "string" },
        "baseHP": { "type": "integer" },
        "baseATK": { "type": "integer" },
        "ability": {
          "type": ["string", "null"]
        }
      }
    }
  },
  "properties": {
    "numberhumans": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/numberhuman"
      }
    },
    "responses": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "abilities": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/numberhumanAbility"
      }
    }
  },
  "required": ["numberhumans", "responses", "abilities"]
}
