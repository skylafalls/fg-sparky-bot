{
  "name": "fg-sparky-bot",
  "description": "Source code for the FG sparky bot, inspired by the GD discord sparky boy",
  "private": true,
  "packageManager": "bun@1.3.1",
  "license": "GPL-3.0-or-later",
  "version": "0.11.1",
  "scripts": {
    "dev": "bun run --watch src/main.ts",
    "build": "bun build src/main.ts --target=bun --production --outfile=dist/fg-sparky-bot --compile",
    "lint": "oxlint . --ignore-path=.gitignore && eslint .",
    "lint:fix": "oxlint --fix --fix-suggestions . --ignore-path=.gitignore && eslint --fix .",
    "typecheck": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "@discordjs/voice": "^0.19.0",
    "bufferutil": "^4.0.9",
    "discord.js": "^14.25.1",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.28",
    "chalk": "^5.6.2",
    "commander": "^14.0.2"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/bun": "^1.3.3",
    "eslint": "^9.39.1",
    "eslint-plugin-oxlint": "^1.31.0",
    "jiti": "^2.6.1",
    "oxlint": "^1.31.0",
    "typescript-eslint": "^8.48.1"
  }
}