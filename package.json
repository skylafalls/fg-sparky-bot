  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "comptime.ts": "^0.8.0",
    "eslint": "^9.39.2",
    "eslint-plugin-oxlint": "^1.34.0",
