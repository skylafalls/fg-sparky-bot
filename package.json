{
  "name": "fg-sparky-bot",
  "description": "Source code for the FG sparky bot, inspired by the GD discord sparky bot",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.27.0",
  "license": "GPL-3.0-or-later",
  "version": "0.13.0",
  "scripts": {
    "dev": "bun run build && bun run --watch dist/main.js",
    "build": "bun run scripts/bundle.ts",
    "lint": "oxlint . --ignore-path=.gitignore && eslint .",
    "lint:fix": "oxlint --fix --fix-suggestions . --ignore-path=.gitignore && eslint --fix .",
    "typecheck": "tsc -p tsconfig.json"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "catalog:linting",
    "@types/bun": "catalog:types",
    "@types/node": "catalog:types",
    "eslint": "catalog:linting",
    "eslint-plugin-oxlint": "catalog:linting",
    "jiti": "catalog:linting",
    "oxlint": "catalog:linting",
    "rolldown": "catalog:build",
    "typescript-eslint": "catalog:linting"
  }
}
